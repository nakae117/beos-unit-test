{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "baseUrl": ".",
      "types": ["node", "jest", "vuetify"],
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx",
      "tests/**/*.js",
      "shims-vue.d.ts"
    ]
  }
  